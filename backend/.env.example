# Server Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://localhost:5432/linepayusdt

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# Blockchain Configuration
KAIA_RPC_URL=https://api.baobab.klaytn.net:8651
CHAIN_ID=1001
PRIVATE_KEY=your_private_key_here

# Contract Addresses (fill after deployment)
PAYMENT_ESCROW_ADDRESS=0x0000000000000000000000000000000000000000
MERCHANT_REGISTRY_ADDRESS=0x0000000000000000000000000000000000000000
USDT_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000

# Indexer Configuration
ENABLE_INDEXER=true
START_BLOCK=latest
BATCH_SIZE=1000
POLLING_INTERVAL=5000
CONFIRMATIONS=3

# LINE Configuration
LINE_CHANNEL_SECRET=your_line_channel_secret
LINE_CHANNEL_ACCESS_TOKEN=your_line_access_token
LIFF_ID=your_liff_id

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key
JWT_EXPIRES_IN=24h

# Logging Configuration
LOG_LEVEL=info
LOG_FILENAME=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Feature Flags
ENABLE_CACHE=true
ENABLE_WEBHOOKS=false
ENABLE_ANALYTICS=true

# Webhook URLs (Optional)
WEBHOOK_PAYMENT_CREATED=
WEBHOOK_PAYMENT_RELEASED=
WEBHOOK_PAYMENT_REFUNDED=